<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <EditText
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:id="@+id/edt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Class"
        android:layout_below="@+id/edt_name"
        android:ems="10"
        android:id="@+id/edt_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edt_condition"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/edt_name"
        android:layout_toRightOf="@+id/edt_class"
        android:layout_width="wrap_content"
        android:hint="CONDITON"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv"
        android:layout_below="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>

    <LinearLayout
        android:id="@+id/buton1"
        android:layout_below="@id/edt_class"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add"
            android:layout_weight="1"
            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/selectone"
            android:layout_weight="1"
            android:text="SELECT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/selectall"
            android:layout_weight="1"
            android:text="SELECT ALL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/button2"
        android:layout_below="@+id/buton1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/update"
            android:layout_weight="1"
            android:text="update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/deleteone"
            android:layout_weight="1"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/deleteall"
            android:layout_weight="1"
            android:text="DELETE ALL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>